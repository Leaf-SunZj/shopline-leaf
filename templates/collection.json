{
  "name": "collection.html",
  "wrapper": "section.product-list",
  "sections": {
    "collection-header": {
      "type": "product/collections/collection-header",
      "disabled": false,
      "settings": {
        "show_category_name": true,
        "show_category_cover": true,
        "parallax_scroll": false
      }
    },
    "collection-page":{
      "type": "product/collections/collection-page",
      "disabled": false,
      "settings": {
        "category_desc_position": "top",
        "sorter_enable": true,
        "per_page_num": 16,
        "pc_cols": 4,
        "md_cols": 2,
        "infinite_scroll": false,
        "product_image_ratio": "100",
        "product_fill_type": "cover",
        "product_hover_show_next": false,
        "filter_enable": true,
        "support_multiple": false,
        "padding_top": 10,
        "padding_bottom": 0,
        "product_sub_title": "hide",
        "show_orgin_price": true,
        "price_show_type": "from_lowest_price"
      },
      "blocks": {
        "a": {
          "type": "child_category",
          "settings": {
            "show_level3_title": false,
            "show_product_num": false,
            "default_fold": false
          }
        },
        "b": {
          "type": "tag_filter",
          "settings": {
            "tag_filter_title": "Filters",
            "default_fold": false,
            "tag_data": {
              "group": "1",
              "tags": []
            }
          }
        }
      },
      "block_order": ["a", "b"]
    },
    "recently-viewed":{
      "type": "product/recently-viewed",
      "disabled": false,
      "settings": {
        "show_product_number": 6,
        "pc_cols": 4,
        "md_cols": 2,
        "product_image_ratio": "0",
        "product_fill_type": "contain",
        "product_hover_show_next": false,
        "padding_top": 36,
        "padding_bottom": 24
      }
    }
  },
  "order": [
    "collection-header","collection-page","recently-viewed"
  ]
}
